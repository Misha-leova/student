@{
    ViewData["Title"] = "Contacte";
}

<div class="contact-header py-4 mb-5" style="background-color: var(--secondary-color); border-radius: 15px; position: relative; overflow: hidden;">
    <div class="container text-center text-white py-4">
        <h1 class="display-4 fw-bold">Contactează-ne</h1>
        <p class="lead">Suntem aici pentru a-ți răspunde la orice întrebare despre jucăriile noastre!</p>

        <!-- Elemente decorative -->
        <div class="position-absolute" style="top: 20px; left: 20px; transform: rotate(-15deg);">
            <i class="fas fa-rocket fa-3x text-white opacity-50"></i>
        </div>
        <div class="position-absolute" style="bottom: 20px; right: 30px; transform: rotate(10deg);">
            <i class="fas fa-teddy-bear fa-3x text-white opacity-50"></i>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Informații de contact -->
        <div class="col-lg-4 mb-4">
            <div class="contact-info-card p-4" style="background-color: white; border-radius: 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); height: 100%;">
                <h3 class="mb-4 fw-bold" style="color: var(--primary-color);">Informații de Contact</h3>

                <div class="contact-item d-flex align-items-center mb-4">
                    <div class="contact-icon me-3" style="width: 50px; height: 50px; background-color: var(--accent-color); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-map-marker-alt fa-lg" style="color: var(--dark-color);"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Adresa noastră</h5>
                        <p class="mb-0">Strada Jucăriilor nr. 123<br>Sector 1, București, 010101</p>
                    </div>
                </div>

                <div class="contact-item d-flex align-items-center mb-4">
                    <div class="contact-icon me-3" style="width: 50px; height: 50px; background-color: var(--accent-color); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-phone-alt fa-lg" style="color: var(--dark-color);"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Telefon</h5>
                        <p class="mb-0">Relații clienți: 0712 345 678<br>Comenzi: 0712 345 679</p>
                    </div>
                </div>

                <div class="contact-item d-flex align-items-center mb-4">
                    <div class="contact-icon me-3" style="width: 50px; height: 50px; background-color: var(--accent-color); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-envelope fa-lg" style="color: var(--dark-color);"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Email</h5>
                        <p class="mb-0">
                            <a href="mailto:contact@lumeajucariilor.ro" style="color: var(--primary-color); text-decoration: none;">contact@lumeajucariilor.ro</a><br>
                            <a href="mailto:comenzi@lumeajucariilor.ro" style="color: var(--primary-color); text-decoration: none;">comenzi@lumeajucariilor.ro</a>
                        </p>
                    </div>
                </div>

                <div class="contact-item d-flex align-items-center">
                    <div class="contact-icon me-3" style="width: 50px; height: 50px; background-color: var(--accent-color); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-clock fa-lg" style="color: var(--dark-color);"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Program</h5>
                        <p class="mb-0">
                            Luni - Vineri: 09:00 - 20:00<br>
                            Sâmbătă: 10:00 - 18:00<br>
                            Duminică: 10:00 - 16:00
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formular de contact -->
        <div class="col-lg-8 mb-4">
            <div class="contact-form-card p-4" style="background-color: white; border-radius: 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                <h3 class="mb-4 fw-bold" style="color: var(--primary-color);">Trimite-ne un mesaj</h3>

                <form id="contactForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label fw-bold">Numele tău</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--accent-color); border: none;">
                                    <i class="fas fa-user" style="color: var(--dark-color);"></i>
                                </span>
                                <input type="text" class="form-control" id="name" placeholder="Nume și prenume" required style="border: 2px solid var(--secondary-color); border-left: none; padding: 10px;">
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label fw-bold">Email</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--accent-color); border: none;">
                                    <i class="fas fa-envelope" style="color: var(--dark-color);"></i>
                                </span>
                                <input type="email" class="form-control" id="email" placeholder="email@exemplu.ro" required style="border: 2px solid var(--secondary-color); border-left: none; padding: 10px;">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="phone" class="form-label fw-bold">Telefon</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--accent-color); border: none;">
                                    <i class="fas fa-phone" style="color: var(--dark-color);"></i>
                                </span>
                                <input type="tel" class="form-control" id="phone" placeholder="07XX XXX XXX" style="border: 2px solid var(--secondary-color); border-left: none; padding: 10px;">
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="subject" class="form-label fw-bold">Subiect</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--accent-color); border: none;">
                                    <i class="fas fa-tag" style="color: var(--dark-color);"></i>
                                </span>
                                <select class="form-select" id="subject" required style="border: 2px solid var(--secondary-color); border-left: none; padding: 10px;">
                                    <option value="" selected disabled>Alege un subiect</option>
                                    <option value="comanda">Întrebare despre comandă</option>
                                    <option value="produs">Informații despre produs</option>
                                    <option value="reclamatie">Reclamație</option>
                                    <option value="colaborare">Propunere de colaborare</option>
                                    <option value="altele">Altele</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="message" class="form-label fw-bold">Mesajul tău</label>
                        <textarea class="form-control" id="message" rows="5" placeholder="Scrie-ne mesajul tău aici..." required style="border: 2px solid var(--secondary-color); padding: 10px;"></textarea>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="privacy" required style="border: 2px solid var(--secondary-color);">
                        <label class="form-check-label" for="privacy">Am citit și sunt de acord cu <a href="/privacy" style="color: var(--primary-color);">Politica de confidențialitate</a></label>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-lg" style="background-color: var(--primary-color); color: white; border-radius: 30px; padding: 10px 40px; font-weight: bold; border: none; transition: all 0.3s;">
                            <i class="fas fa-paper-plane me-2"></i> Trimite mesajul
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Hartă și Detalii Magazin -->
    <div class="row mt-4 mb-5">
        <div class="col-12">
            <div class="map-container p-4" style="background-color: white; border-radius: 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
